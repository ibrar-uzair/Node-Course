extends layouts/main-layout.pug


block content
    if prods.length>0
        .grid
            each product in prods

                div.container
                    div.image
                        img(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/245657/t-shirt.png", alt="")
                    div.card-content
                        div.wrapper
                            div.title #{product.title}
                            p Men's running shirt
                            span.price $29.99
                            div.content.size
                                div.name.size-name Size
                                div.size-value
                                    span.color XS
                                    span.color S
                                    span.active M
                                    span.color L
                                    span.color XL 

                            div.content colour 
                                div.name.colour-name Colour
                                div.colour-value
                                    span.white(data-color="lightgrey", data-img="https://s3-us-west-2.amazonaws.com/s.cdpn.io/245657/t-shirt-large2.png")
                                    span.blue.active(data-color="#456ABD", data-img="https://s3-us-west-2.amazonaws.com/s.cdpn.io/245657/t-shirt-large.png")
                                    span.yellow(data-color="#EAA523", data-img="https://s3-us-west-2.amazonaws.com/s.cdpn.io/245657/t-shirt-large3.png")

                            div.btns
                                button Buy now
                                button Add to cart
                br
    else 
        h1 No products found