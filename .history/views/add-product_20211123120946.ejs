<%- include('./includes/header.ejs') %>
    <title>Add Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   </head> 

<body>
    
    <%- include('./includes/navigation.ejs') %>

    <br>   

    <div class="enterProduct">
        <section>
            <form action="/add-product" method="POST">
                <legend class="text-center header">Add Product</legend>
                <div class="form-group">
                    <label for="exampleInputEmail1">Enter the name of the product</label>
                    <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp" placeholder="Shirt">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Enter the Category</label>
                    <input type="text" class="form-control" id="category" name="category" aria-describedby="emailHelp" placeholder="Men's">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Enter the Price</label>
                    <input type="text" class="form-control" id="price" name="price" aria-describedby="emailHelp" placeholder="0.0">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Enter the short description</label>
                    <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                </div>
                <br>
                <div class="panel">
                    <button id="add-product-button" class="btn btn-primary" type="submit">Add</button>
                    <a href="#/">
                        <button class="btn btn-primary" id="cancel-button">Cancel</button>
                    </a>
                </div>
            </form>
        </section>
    </div>
</body>
</html>